#!/usr/bin/env sh

# Check if we're on main branch and warn
branch=$(git branch --show-current)
if [ "$branch" = "main" ]; then
  echo ""
  echo "‚ö†Ô∏è  WARNING: You're about to commit directly to main branch!"
  echo ""
  echo "üö® Recommended workflow:"
  echo "   1. just work <issue>     # Create/switch to feature branch"
  echo "   2. git commit -m '...'   # Commit on feature branch"
  echo "   3. just pr               # Create pull request"
  echo "   4. just merge            # Merge via PR"
  echo ""
  echo "üí° To fix this commit:"
  echo "   git reset --soft HEAD~1  # Undo commit, keep changes"
  echo "   just work <issue>        # Switch to proper branch"
  echo ""
  read -p "ü§î Continue committing to main anyway? [y/N] " -n 1 -r
  echo ""
  if [[ ! $REPLY =~ ^[Yy]$ ]]; then
    echo "‚ùå Commit cancelled. Use proper workflow above."
    exit 1
  fi
  echo "‚ö†Ô∏è  Proceeding with main branch commit..."
  echo ""
fi

npx lint-staged
